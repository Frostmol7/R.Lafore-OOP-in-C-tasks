#include <iostream>
using namespace std;

struct sterling
{
    int pounds;
    int shillings;
    int pence;
};

int main()
{
    double newStile;
    sterling oldStile;

    cout << "Enter decimal pounds:  ";
    cin >> newStile;

    oldStile.pounds = static_cast<int>(newStile); // remove decimal fraction
    oldStile.shillings = (newStile - oldStile.pounds) * 20; // regain decimal fractio then multiply oldStile.shillings by 20 to find shillings

    static_cast<int>(newStile);
    newStile = static_cast<int>((oldStile.shillings - static_cast<int>(oldStile.shillings)) * 12);
    cout << "Equivalent amount in previous notation: Â£" << oldStile.pounds << '.' << static_cast<int>(oldStile.shillings) << '.' << newStile << endl;

    return 0;
}
