#include <iostream>
using namespace std;

struct sterling
{
    int pounds;
    int shillings;
    int pence;
};

int main()
{
    double newStile;
    sterling oldStile;

    cout << "Enter decimal pounds:  ";
    cin >> newStile;

    oldStile.pounds = static_cast <int>(newStile);
    oldStile.shillings = static_cast <int> ((newStile - oldStile.pounds) * 20);
    oldStile.pence = static_cast <int> (((newStile - oldStile.pounds) * 20 - oldStile.shillings) * 12);
    
    cout << "Equivalent amount in previous notation: Â£" << oldStile.pounds << "." << oldStile.shillings << "." << oldStile.pence;

    return 0;
}
